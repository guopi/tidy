{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES2015",
        "moduleResolution": "node",
        "allowJs": false,
        "jsx": "react",
        "sourceMap": true,
        "outDir": "./out",
        "declaration": false,
        //        "declarationDir": "./out/dts",
        "skipLibCheck": true,
        "strict": true,
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "src/**/*.ts",
        "types/*.d.ts",
        "examples/**/*.ts"
    ],
    "exclude": [
        "build",
        "out",
        "node_modules"
    ]
}