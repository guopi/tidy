{
    "compilerOptions": {
        "target": "ES6",
        "module": "ESNext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "outDir": "./out",
        "declaration": false,
        // "declarationDir": "./out/dts",
        "strict": true,
        "allowJs": false,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "typeRoots": [
            "./types",
            "./node_modules/@types"
        ]
    },
    "include": [
        "./src/**/*.ts",
        "./types/*.d.ts"
    ],
    "exclude": [
        "out",
        "node_modules"
    ]
}