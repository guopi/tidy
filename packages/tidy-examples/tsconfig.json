{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "outDir": "./out",
        "declaration": false,
        // "declarationDir": "./out/dts",
        "strict": true,
        "allowJs": false,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "out",
        "node_modules"
    ]
}