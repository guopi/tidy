{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "outDir": "./out",
        "sourceMap": true,
        "declaration": false,
        // "declarationDir": "./out/dts",
        "strict": true,
        "allowJs": false,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "typeRoots": [
            "./types"
        ]
    },
    "include": [
        "./src/**/*.ts",
        "./types/*.d.ts",
        "./__tests__/**/*.ts"
    ],
    "exclude": [
        "out",
        "node_modules"
    ]
}